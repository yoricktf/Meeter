<div>
  <img class='img-show' src="<%= @url %>" alt="spot photo"> 
</div>
<div class="main-container">
  

  <div class="result-info"> 
    <div class="result-info d-flex align-items-end"> 
      <h1><strong><%= @result.name %></strong></h1>
      <% @result.rating.to_i.times do %>
        <span>⭐️</span>
      <% end %>
    </div>
    <h2> <i class="fa-li fa fa-map-marker-alt"></i> <%= @result.formatted_address %> </h2>

      <ul class="fa-ul">
        <li> </li>
        <li> </li>
        <li><i class="fa-li fa fa-phone-alt"></i> <%= @result.international_phone_number %> </li>
        <li><i class="fa-li fa fa-globe-europe"></i> <%= @result.website %> </li>
      </ul>

  </div>

  <div id="map"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="page-buttons d-flex justify-items-center">
    <a href="<%=params[:url] %>" class="my-button" id="back-button" >Back</a>
    <%=link_to "Share", share_spots_path(url:request.url), :class => "my-button"%>
  </div>

</div>
