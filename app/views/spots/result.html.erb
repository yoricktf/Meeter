<div class="container">
  
  <div>
    <img src="<%= @url %>" alt="spot photo"> 
  </div>

  <div class="result-info"> 
    <h1><strong><%= @result.name %></strong> <i class="fa-li fa fa-star"></i> <%= @result.rating %>/5 </h1>
        <div class="rating large star-icon direction-rtl value-1 half color-default label-top">
          <div class="label-value">1.5</div>
            <div class="star-container">
                <div class="star">
                    <i class="star-empty"></i>
                    <i class="star-half"></i>
                    <i class="star-filled"></i>
                </div>
                <div class="star">
                    <i class="star-empty"></i>
                    <i class="star-half"></i>
                    <i class="star-filled"></i>
                </div>
                <div class="star">
                    <i class="star-empty"></i>
                    <i class="star-half"></i>
                    <i class="star-filled"></i>
                </div>
            </div>
        </div>
    <h2> <i class="fa-li fa fa-map-marker-alt"></i> <%= @result.formatted_address %> </h2>

      <ul class="fa-ul">
        <li> </li>
        <li> </li>
        <li><i class="fa-li fa fa-phone-alt"></i> <%= @result.international_phone_number %> </li>
        <li><i class="fa-li fa fa-globe-europe"></i> <%= @result.website %> </li>
      </ul>

  </div>

  <div id="map"
    data-markers="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="page-buttons">
    <a href="<%=params[:url] %>" class="my-button" id="back-button" >Back</a>
    <%=link_to "Share", share_spots_path(url:request.url), :class => "my-button"%>
  </div>

</div>
