<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<ul><% @spots.each do |spot| %>
  <li><%= spot.name %> </li>
  <li><%= spot.rating %></li>
  <li><%= spot.price_level %></li>
  <li><%= spot.vicinity %></li>

  <li></li>
  <% end %>
</ul>
