

<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="potato" style="width: 90%; margin: 16px auto;">

  <% @spots.each do |spot| %>

    <div class="card-category" style="width: 100%; margin-bottom: 16px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= spot.photos.any? ? spot.photos[0].fetch_url(500) : "https://picsum.photos/id/1060/600/900" %>)">
      <%= link_to spot.name, result_path(place_id: spot.place_id, url: request.url) %>

    </div>
  <% end %>

  <%=link_to "share", share_spots_path(url:request.url), :class => "my-button button-fullwidth"%>
</div>
