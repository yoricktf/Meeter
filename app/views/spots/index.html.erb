

<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<% @spots.each do |spot| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= spot.photos.any? ? spot.photos[0].fetch_url(500) : "#" %>)">
    <%= link_to spot.name, result_path(place_id: spot.place_id) %>
  </div>
<% end %>

<%=link_to "share", share_spots_path(url:request.url), :class => "my-button"%>
